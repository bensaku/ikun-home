<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/work0530_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/work0530_button_main"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="首页"
        android:textSize="25sp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="@+id/work0530_centerline"
        app:layout_constraintBottom_toBottomOf="@+id/work0530_centerline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/work0530_centerline"
        android:gravity="start" />

    <TextView
        android:id="@+id/work0530_centerline"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="|"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1"/>
    <TextView
        android:id="@+id/work0530_button_mine"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="我的"
        android:textSize="25sp"
        android:clickable="true"
        android:gravity="end"
        app:layout_constraintTop_toTopOf="@+id/work0530_centerline"
        app:layout_constraintBottom_toBottomOf="@+id/work0530_centerline"
        app:layout_constraintLeft_toRightOf="@+id/work0530_centerline"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>