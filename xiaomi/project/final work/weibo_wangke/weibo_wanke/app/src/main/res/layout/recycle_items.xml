<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:src="@drawable/empty_avatar" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:text="username"
            android:textSize="21sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:src="@drawable/cross"
            android:clickable="true"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_weibo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="6"
        android:text="最新TOP10歌单分享给大家，希望大家可以喜欢！求赞求支持！"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/single_horizontal"
        android:layout_width="330dp"
        android:layout_height="186dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"></ImageView>

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/single_vertical"
        android:layout_width="190dp"
        android:layout_height="330dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone">

    </ImageView>

    <LinearLayout
        android:id="@+id/nine_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/picture_1"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/empty_img" />

            <ImageView
                android:id="@+id/picture_2"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/empty_img" />

            <ImageView
                android:id="@+id/picture_3"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/empty_img" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/picture_4"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/empty_img" />

            <ImageView
                android:id="@+id/picture_5"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/empty_img" />

            <ImageView
                android:id="@+id/picture_6"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/empty_img" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/picture_7"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/empty_img" />

            <ImageView
                android:id="@+id/picture_8"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/empty_img" />

            <ImageView
                android:id="@+id/picture_9"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/empty_img" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/video_parent"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone">

        <!-- 封面图 -->
        <ImageView
            android:id="@+id/cover_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <!-- 视频播放器 -->
        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:visibility="gone" />

        <SeekBar
            android:id="@+id/video_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:enabled="false"
            android:visibility="gone" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/like_parent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true">

            <ImageView
                android:padding="5dp"
                android:id="@+id/iv_like"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/like_selector" />

            <TextView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="点赞" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <ImageView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/comment" />

            <TextView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="评论" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


    </LinearLayout>

</LinearLayout>