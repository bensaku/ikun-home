<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/work0527_fragment_view"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/work0527_tv_main"
            android:layout_weight="1"
            android:text="首页"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/work0527_tv_page2"
            android:layout_weight="1"
            android:text="页面2"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/work0527_tv_page3"
            android:layout_weight="1"
            android:text="页面3"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/work0527_tv_page4"
            android:layout_weight="1"
            android:text="页面4"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <!--    android:name="com.example.myapplication3.ExampleFragment"-->

</androidx.appcompat.widget.LinearLayoutCompat>